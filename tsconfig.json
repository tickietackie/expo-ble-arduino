{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext",
      "es6"
    ],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "allowJs": false,
    "paths": {
      "@comp/*": [
        "components/*"
      ],
      "@Authentication/*": [
        "features/Authentication*"
      ],
      "@Effects/*": [
        "features/Effects*"
      ],
      "@Home/*": [
        "features/Effects*"
      ],
      "*": [
        "./src/*",
        "./types/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
